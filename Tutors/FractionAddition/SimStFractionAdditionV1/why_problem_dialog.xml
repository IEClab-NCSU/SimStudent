		<param key="prediction" value="predicted" />
		<param key="currentAnnotation" value="Category" />
	</module> 
</configuration>


<concepts>
  <concept label="unanticipated-response">
   <phrase>anything else</phrase>
  </concept>

  <concept label="final-thanks">
   <phrase>Okay!</phrase>
  </concept>
  <concept label="first-question">
   <phrase>What would I learn from the type of equation like "%equation%"?</phrase>
  </concept>

  <concept label="N1" model="coded" />
  <concept label="N1-response-simst">
   <phrase>Okay!</phrase>
  </concept>

  <concept label="okay" model="recheck"/>
  <concept label="N4-response-simst-okay">
   <phrase>Okay.</phrase>
  </concept>

  <concept label="N4" model="coded"/>
  <concept label="clarify" model="recheck"/>
  <concept label="response-simst-clarify">
   <phrase>Hmm, I still don't understand-could you explain this to me in more detail?</phrase>
  </concept>

  <concept label="bad" model="recheck"/>
  <concept label="N7-response-simst">
   <phrase>That didn't answer my question.  Maybe you didn't understand what I was asking? - Could you try to explain it to me another way?</phrase>
  </concept>

  <concept label="N6" model="coded"/>
  <concept label="N6-response-simst">
   <phrase>The example problems and unit overview might help with this problem.  You could use these to help you explain this to me.</phrase>
  </concept>
  
</concepts>

<script>
 <goal name="start">
  <step><subgoal>reasons</subgoal></step>
  <!--<step>
   <initiation>first-question</initiation>
   </step>-->
 </goal>
 
 <goal name="reasons">
  <step>
   <initiation>first-question</initiation>
   <response say="N1-response-simst">N1</response>   
   <response push="N6-response-action">N6</response>
   <response say="N4-response-simst-okay">okay</response>
   <response push="N4-response-action-clarify">N4</response>
   <response push="N7-response-action">bad</response>
   <response push="N4-response-action-clarify">clarify</response>
   
   <response say="final-thanks">unanticipated-response</response>
  </step>
 </goal>
  
 <goal name="N4-response-action-clarify">
  <step>
   <initiation>response-simst-clarify</initiation>
