html, body {margin:0;padding:0;height:100%;}
/* ------------- Main Manu -------------*/
#top{
width:100%;
height:67px;
background-color:white;
border-bottom: 1px solid #95B8E7;
}

#logo{
width:5%;
height:100%;
float:left;
background-color:olive;
}

#up{
display:block;
height:50%;
background-color:white;
}

#title{
display:inline;
width:60%;
float:left;
background-color:white;
}

#title h1{
font-size:25px;
padding:5px 0 0 1%;
color:blue;
margin:0;
}


#signin{
display:inline;
font-size:16px;
text-align: right;
float:left;
width:35%;
background-color:white;
}

#signin h1{
font-size:16px;
text-align: right;
padding:7px 2% 0 0;
color:blue;
margin:0;
}

#menubar{
display:block;
height:50%;
}

/* ------------- Shortcuts -------------*/
#shortcuts{
display:block;
width:100%
height:35px;
border-bottom: 1px solid #95B8E7;
}

.toolbardiv
{
	background: #ffffff;
}

.separator_vertical
{
	margin-top: 4px;
	margin-bottom: 1px;
	margin-left: 4px;
	margin-right: 4px;
	border:1px inset #ffffff;
	height:18px; 
	float: left;
}

.iconbutton 
{
	margin-top: 2px;
	margin-bottom: 2px;
	margin-left: 4px;
	margin-right: 3px;
	padding: 2px;
	text-indent:0;
	border:1px solid #80B2FF;
	height:18px;
	line-height:18px;
	width:18px;
	text-decoration:none;
	text-align:center;
	text-shadow:1px 1px 0px #ffffff;
	float: left;
}

.iconbutton:hover 
{
	background-color:#80B2FF;
}

.iconbutton:active 
{
	position:relative;
	top:1px;
}
/*------------- End of Shortcuts -------------*/


#left{
width:15%;
height:81%;
float:left;
background-color:white;
}

#canvas{
width:65%;
height:81%;
float:left;
background-color:#F0F0F0;
}

.graphContainer
{
	border: 	1px solid #000000;
	margin: 	0px;
	padding:	0px;
	position:	relative;
	overflow:	auto;
	width:		100%;
	height:		100%;
	background:url('images/canvas.png');
}

.tutorcontainer
{
	width: 700px; 
	height: 475px;
	border: 2px dotted #4169E1;
	border-radius: 25px;
	background-image: url("../images/canvas.png");
	background-repeat:repeat;
	margin: 0px;
	padding:0px;
	-webkit-box-shadow: 4px 4px 5px 0px rgba(0,0,0,0.75);
	-moz-box-shadow: 4px 4px 5px 0px rgba(0,0,0,0.75);
	box-shadow: 4px 4px 5px 0px rgba(0,0,0,0.75);
}


#rcorners {
    border-radius: 25px;
    border: 2px dotted #4169E1;
    padding: 10px;
	background-image: url("../images/canvas.png");
	background-repeat:repeat;
    width: 97%;
    height: 95%;    
}

#right{
width:19.7%;
height:81%;
float:left;
background-color:white;
border-left: 1px solid #95B8E7;
}

#footer{
height:20px;
width:100%;
color:gray;
float:left;
text-align:center;
background-color:white;
border-top: 1px solid #95B8E7;
border-bottom: 1px solid #95B8E7;
}